<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
    android:layout_height="wrap_content">
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:text="x - y = z"
        android:textSize="20dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:minWidth="100px"
        android:id="@+id/values" />

    <TextView
        android:text="Brakefast:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/brakefast" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:id="@+id/breakfastScroll"
       
        >
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/breakfastLinear" >


        </LinearLayout>



    </HorizontalScrollView>
    <Button
        android:text="Add food"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:id="@+id/brakefastButton"
        android:background="@android:color/holo_blue_bright"
    
        
        />
    <TextView
        android:text="Lunch:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/lunch" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:id="@+id/lunchScroll"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lunchLinear" />


    </HorizontalScrollView>
    <Button
        android:text="Add food"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@android:color/holo_blue_bright"
        android:id= "@+id/lunchButton" 
       />
    <TextView
        android:text="Dinner:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/dinner" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:id="@+id/dinnerScroll"
       
        >
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/dinnerLinear" />
        
    </HorizontalScrollView>
    <Button
        android:text="Add food"
        android:layout_width="300px"
        android:layout_height="150px"
        android:layout_marginTop="10px"
        android:background="@android:color/holo_blue_bright"
        android:id= "@+id/dinnerButton"
        />
    <Button
        android:text="SAVE THIS DAY"
        android:layout_width="500px"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginTop="10px"
        android:id="@+id/save" />


    <TextView
        android:text="Past Days:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:minWidth="25px"
        android:minHeight="25px"
/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:columnCount="3"
        android:layout_gravity="center"
        android:id="@+id/daysGrid"
        >
        <Button
            android:text="Button3"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/button1"
            android:layout_margin="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="Button2"
            android:minWidth="25px"
            android:minHeight="25px"
                        android:layout_margin="20px"

            android:id="@+id/button121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="Button1"
            android:layout_margin="20px"

            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/bu124tton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        
    </GridLayout>
</LinearLayout>
</ScrollView>
